<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FastQuizMAUI.ViewModels"
             x:Class="FastQuizMAUI.Pages.InsideBoxPage"
             x:DataType="vm:InsideBoxVM"
             Title="Inside Box">

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <Label  Grid.Row="0" 
                Text="{Binding BoxToDisplay.BoxName}"
                VerticalOptions="Center" 
                HorizontalTextAlignment="Center"
                FontSize="20"
                FontAttributes="Bold"/>
        <Button 
                x:Name="btnNewItem"
                Grid.Row="3"
                ImageSource="plus_white.svg" 
                Text="Add New Item"
                Margin="30,10,30,10"
                CornerRadius="20"
                FontSize="20"
                Clicked="btnNewItem_Clicked"/>
        
    </Grid>
        
</ContentPage>